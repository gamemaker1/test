{
	"name": "server",
	"version": "1.0.0",
	"description": "Runs a rate-limit-enabled server on port 8080",
	"scripts": {
		"start": "ts-node source/index.ts",
		"clean": "del-cli dist/ coverage/ *.log *.tmp *.bak *.tgz",
		"build:cjs": "esbuild --platform=node --bundle --format=cjs --outfile=dist/index.cjs --footer:js=\"module.exports = rateLimit;\" source/index.ts",
		"build:esm": "esbuild --platform=node --bundle --format=esm --outfile=dist/index.mjs source/index.ts",
		"compile": "run-s clean build:*",
		"prepare": "run-s compile"
	},
	"dependencies": {
		"express": "^4.17.2",
		"express-rate-limit": "^6.0.3"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/node": "^17.0.4",
		"del-cli": "^4.0.1",
		"dts-bundle-generator": "^6.2.0",
		"esbuild": "^0.14.9",
		"npm-run-all": "^4.1.5",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	}
}
